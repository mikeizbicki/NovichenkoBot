    <script>
      var loadPianoScript = function(uri){
        return new Promise((resolve, reject) => {
          var a = document.createElement('script');
          a.type = "text/javascript";
          a.src = uri;
          a.async = true;
          a.onload = () => {
            resolve();
          };
          var b = document.getElementsByTagName('script')[0];
          b.parentNode.insertBefore(a, b);
        });
      }
      var pianoLoaded = loadPianoScript('//experience.tinypass.com/xbuilder/experience/load?aid=UbordKxCEu');
    
      pianoLoaded.then(function(){
        var tags = "North Korea|onetime";
        var section = "World";
        var author = "Hyung-Jin Kim / AP";
        var contentCreated = "2019-12-05T19:50:49.000Z";
        var platform = "own";
        var contentType = "article";
        var contentSubType = "";
    
    
        if( typeof tags === 'undefined' || tags === false ) {
          tags = '';
        } else {
          tags = tags.replace(/\|/g,',', tags)
        }
    
        if( typeof section === 'section' || section === false ) {
          section = '';
        }
    
        if( typeof author === 'undefined' || author === false ) {
          author = '';
        }
    
        if( typeof contentCreated === 'undefined' || contentCreated === false ) {
          contentCreated = '';
        }
    
        if( typeof platform === 'undefined' || platform === false ) {
          platform = 'own';
        }
    
        if( typeof contentType === 'undefined' || contentType === false ) {
          contentType = 'unknown';
        }
    
        if( typeof contentSubType === 'undefined' || contentSubType === false ) {
          contentSubType = '';
        }
    
        // Pass few of the gtm data into piano. This could have been done in GTM, but Piano prefers to have it in codebase for various reasons.
        window.tp = window.tp || [];
        window.tp.push(["setTags", [tags]]);
        window.tp.push(["setContentSection", section]);
        window.tp.push(["setContentAuthor", author]);
        window.tp.push(["setContentCreated", contentCreated]);
        window.tp.push(["setCustomVariable", "platform", platform]);
        window.tp.push(["setCustomVariable", "contentType", contentType]);
        window.tp.push(["setCustomVariable", "contentSubType", contentSubType]);
      });
    </script>

